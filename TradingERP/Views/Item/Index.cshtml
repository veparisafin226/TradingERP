@model IEnumerable<TradingERP.Models.ItemMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <h1>Items</h1>

    <p class="float-right btn btn-primary">
        <a class="text-white" asp-action="Create">Create New</a>
    </p>
    <table class="table bg-white p-2">
        <thead>
            <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.ItmName)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.ItmStatus)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.ItmName)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.ItmStatus)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Item", new { id = item.ItmId })"><i class="fa fa-pen"></i></a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Item", new { id = item.ItmId })" onclick = "return confirm('Are you sure you want to delete this record?');"><i class="fa fa-trash"></i></a>

                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
   
}