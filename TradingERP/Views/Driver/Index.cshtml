@model IEnumerable<TradingERP.Models.DriverMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <h1>Drivers</h1>

    <p class="float-right btn btn-primary">
        <a class="text-white" asp-action="Create">Create New</a>
    </p>
    <table class="table bg-white p-2">
        <thead>
            <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.DrmName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DrmContactNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DrmStatus)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.DrmName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DrmContactNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DrmStatus)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Driver", new { id = item.DrmId })"><i class="fa fa-pen"></i></a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Driver", new { id = item.DrmId })" onclick="return confirm('Are you sure you want to delete this record?');"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
   
}