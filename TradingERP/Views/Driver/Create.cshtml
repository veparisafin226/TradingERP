@model TradingERP.Models.DriverMaster

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">


    <h3>New Driver</h3>

   
        
            <form asp-action="Create" class="row bg-white p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group col-md-6">
                    <label asp-for="DrmName" class="control-label"></label>
                    <input asp-for="DrmName" class="form-control" />
                    <span asp-validation-for="DrmName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DrmContactNo" class="control-label"></label>
                    <input asp-for="DrmContactNo" class="form-control" />
                    <span asp-validation-for="DrmContactNo" class="text-danger"></span>
                </div>
                <p class="text-danger">
            @ViewBag.response
                </p>
                <div class="form-group col-12 text-right">
                    <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
       
   

   


</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}