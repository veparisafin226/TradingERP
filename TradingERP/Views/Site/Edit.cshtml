@model TradingERP.Models.SiteMaster

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">


    <h3>Edit</h3>

   
        
            <form asp-action="Edit" class="row bg-white p-3">
        <input asp-for="UsmId" type="hidden" class="form-control" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group col-md-6">
                    <label asp-for="StmName" class="control-label"></label>
            <input asp-for="StmName" class="form-control" />
            <span asp-validation-for="StmName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="StmAddress" class="control-label"></label>
            <input asp-for="StmAddress" class="form-control" />
            <span asp-validation-for="StmAddress" class="text-danger"></span>
                </div>
        <div class="form-group col-md-6">
            <label asp-for="StmStatus" class="control-label"></label>
            <input asp-for="StmStatus" class="form-control" />
            <span asp-validation-for="StmStatus" class="text-danger"></span>
        </div>
        <p class="text-danger">
            @ViewBag.response
        </p>
                <div class="form-group col-12 text-right">
                    <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
       
   

   


</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}