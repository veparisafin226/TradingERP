@model IEnumerable<TradingERP.Models.SiteMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <h1>Sites</h1>

    <p class="float-right btn btn-primary">
        <a class="text-white" asp-action="Create">Create New</a>
    </p>
    <table class="table bg-white p-2">
        <thead>
            <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.StmName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StmAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StmStatus)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.StmName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StmAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StmStatus)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Site", new { id = item.StmId })"><i class="fa fa-pen"></i></a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Site", new { id = item.StmId })" onclick="return confirm('Are you sure you want to delete this record?');"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
   
}