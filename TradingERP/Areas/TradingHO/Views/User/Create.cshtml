@model TradingERP.Models.UserMaster

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/TradingHO/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

<h4>New User</h4>
<hr />
<div class="row border-1">
    <div class="col-md-12">
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group col-md-6">
                <label asp-for="UsmName" class="control-label"></label>
                <input asp-for="UsmName" class="form-control" />
                <span asp-validation-for="UsmName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UsmEmail" class="control-label"></label>
                <input asp-for="UsmEmail" class="form-control" />
                <span asp-validation-for="UsmEmail" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UsmContact" class="control-label"></label>
                <input asp-for="UsmContact" class="form-control" />
                <span asp-validation-for="UsmContact" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="UsmPassword" class="control-label"></label>
                <input asp-for="UsmPassword" class="form-control" />
                <span asp-validation-for="UsmPassword" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                
                    <label class="control-label">Status</label>
                    <input class="" asp-for="UsmStatus" /> 
                
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>



</div>